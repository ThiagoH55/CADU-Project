generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Image {
  id          Int      @id @default(autoincrement())
  Image       Bytes
  contentType String
  createdAt   DateTime @default(now())
}

model User {
  id        String @id @default(uuid())
  name      String @db.VarChar(180)
  email     String @unique @db.VarChar(255)
  cellPhone String @unique @map("cell_phone") @db.VarChar(11)
  password  String
  street    String @db.VarChar(90)
  city      String @db.VarChar(120)
  state     String @db.VarChar(2)

  animals Animal[]

  donations Donation[]

  @@map("users")
}

model Animal {
  id          String @id @default(uuid())
  name        String @db.VarChar(180)
  description String @db.VarChar(400)
  gender      Gender

  Donation Donation?

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  breed   Breed  @relation(fields: [breedId], references: [id])
  breedId String @map("breed_id")

  @@map("animals")
}

model TypeOfAnimal {
  id   String @id @default(uuid())
  name String @db.VarChar(180)

  breeds Breed[]

  @@map("type_of_animals")
}

model Breed {
  id   String @id @default(uuid())
  name String @db.VarChar(180)

  animals Animal[]

  typeOfAnimal   TypeOfAnimal @relation(fields: [typeOfAnimalId], references: [id])
  typeOfAnimalId String       @map("animal_type_id")

  @@map("breeds")
}

model Donation {
  id     String  @id @default(uuid())
  status Boolean @default(false)

  user   User   @relation(fields: [userId], references: [id])
  userId String

  animal   Animal @relation(fields: [animalId], references: [id])
  animalId String @unique

  @@map("donations")
}

enum Gender {
  MACHO
  FEMEA
}
